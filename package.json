{
  "name": "@iobroker/dev-server",
  "version": "0.8.0",
  "description": "Single package development server for ioBroker",
  "main": "dist/index.js",
  "bin": {
    "dev-server": "dist/index.js",
    "iobroker-dev-server": "dist/index.js"
  },
  "files": [
    "dist/*.js",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "mocha test/*.test.js --exit",
    "test:js": "mocha test/js-adapters.test.js --exit",
    "test:ts": "mocha test/ts-adapters.test.js --exit",
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json --watch",
    "check": "tsc --noEmit",
    "lint": "eslint -c eslint.config.mjs",
    "release": "release-script",
    "npm": "npm i",
    "update-packages": "npx -y npm-check-updates --upgrade"
  },
  "author": "UncleSamSwiss",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ioBroker/dev-server"
  },
  "homepage": "https://github.com/ioBroker/dev-server",
  "bugs": {
    "url": "https://github.com/ioBroker/dev-server/issues"
  },
  "readme": "README.md",
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@iobroker/eslint-config": "^2.1.0",
    "@iobroker/types": "^7.0.7",
    "@types/browser-sync": "^2.29.0",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.5.2",
    "@types/ps-tree": "^1.1.6",
    "@types/semver": "^7.7.1",
    "@types/table": "^6.3.2",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33",
    "mocha": "^11.7.2",
    "source-map-support": "^0.5.21",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@iobroker/testing": "^5.1.1",
    "acorn": "^8.15.0",
    "axios": "^1.11.0",
    "boxen": "^5.1.2",
    "browser-sync": "^3.0.4",
    "bs-html-injector": "^3.0.3",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "enquirer": "^2.4.1",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.1",
    "http-proxy-middleware": "^3.0.5",
    "nodemon": "^3.1.10",
    "ps-tree": "^1.2.0",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "source-map": "^0.7.6",
    "table": "^6.9.0",
    "ws": "^8.18.3",
    "yargs": "^18.0.0"
  }
}
